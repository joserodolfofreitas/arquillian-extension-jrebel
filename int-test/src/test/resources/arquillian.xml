<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://jboss.org/schema/arquillian" xsi:schemaLocation="http://jboss.org/schema/arquillian
                         http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <defaultProtocol type="Servlet 3.0"/>

    <engine>
        <property name="deploymentExportPath">target/</property>
    </engine>

    <extension qualifier="webdriver">
        <property name="javascriptEnabled">true</property>
        <property name="browserCapabilities">chrome</property>
        <property name="remoteReusable">${remoteReusable}</property>
        <property name="remoteAddress">http://localhost:4444/wd/hub/</property>
        <property name="chromeDriverBinary">src/test/resources/chromedriver_win.exe</property>
    </extension>

</arquillian>
